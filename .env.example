############################
# PostgreSQL
############################
POSTGRES_USER=root
POSTGRES_PASSWORD=password
POSTGRES_DB=n8n

############################
# n8n Config
############################
N8N_ENCRYPTION_KEY=super-secret-key
N8N_USER_MANAGEMENT_JWT_SECRET=even-more-secret
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# Base URL (optional, only if using SSL or reverse proxy)
# WEBHOOK_URL=https://your-domain.com/

############################
# Ollama Config
############################

# Docker container internal URL
OLLAMA_HOST=host.docker.internal:11434

# Uncomment when running external Ollama (e.g., Mac host)
# OLLAMA_HOST=host.docker.internal:11434

############################
# Open WebUI Defaults
############################

# Admin credentials (change after first login)
DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_PASSWORD=admin123

# Enable login page for OpenWebUI
WEBUI_AUTH=true

############################
# Extra options (optional)
############################

# Allow larger uploads in n8n (images/doc AI projects)
N8N_PAYLOAD_SIZE_MAX=64

# Enable vector embedding mode for n8n (optional)
# N8N_EXPERIMENTAL_OPENAI_VECTORS=true
